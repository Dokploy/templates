{
  "semi": true,
  "trailingComma": "es5",
  "singleQuote": true,
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "quoteProps": "as-needed",
  "proseWrap": "preserve",
  "htmlWhitespaceSensitivity": "css",
  "embeddedLanguageFormatting": "auto",
  "singleAttributePerLine": false,
  "overrides": [
    {
      "files": ["*.js", "*.jsx"],
      "options": {
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5",
        "printWidth": 80
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "options": {
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5",
        "printWidth": 80,
        "parser": "typescript"
      }
    },
    {
      "files": ["*.html", "*.htm"],
      "options": {
        "printWidth": 100,
        "tabWidth": 2,
        "singleQuote": false,
        "htmlWhitespaceSensitivity": "css",
        "singleAttributePerLine": true,
        "bracketSameLine": false
      }
    },
    {
      "files": ["*.css", "*.scss", "*.sass", "*.less"],
      "options": {
        "printWidth": 100,
        "tabWidth": 2,
        "singleQuote": true,
        "trailingComma": "none"
      }
    },
    {
      "files": ["*.json", "*.jsonc"],
      "options": {
        "printWidth": 120,
        "trailingComma": "none",
        "singleQuote": false,
        "tabWidth": 2
      }
    },
    {
      "files": ["package.json", "package-lock.json"],
      "options": {
        "printWidth": 120,
        "trailingComma": "none",
        "singleQuote": false,
        "tabWidth": 2
      }
    },
    {
      "files": ["*.yaml", "*.yml"],
      "options": {
        "printWidth": 120,
        "singleQuote": false,
        "tabWidth": 2
      }
    },
    {
      "files": ["*.md", "*.mdx"],
      "options": {
        "printWidth": 100,
        "proseWrap": "always",
        "tabWidth": 2,
        "singleQuote": false
      }
    },
    {
      "files": ["*.toml"],
      "options": {
        "printWidth": 120,
        "tabWidth": 2
      }
    },
    {
      "files": ["*.svg"],
      "options": {
        "printWidth": 120,
        "htmlWhitespaceSensitivity": "ignore",
        "singleAttributePerLine": false
      }
    },
    {
      "files": ["*.xml"],
      "options": {
        "printWidth": 120,
        "tabWidth": 2,
        "singleAttributePerLine": true
      }
    },
    {
      "files": ["*.config.js", "*.config.ts", "vite.config.*", "*.config.mjs"],
      "options": {
        "printWidth": 100,
        "singleQuote": true,
        "trailingComma": "es5"
      }
    },
    {
      "files": ["*.d.ts"],
      "options": {
        "printWidth": 100,
        "singleQuote": true,
        "trailingComma": "es5"
      }
    },
    {
      "files": [".prettierrc", ".eslintrc", ".babelrc"],
      "options": {
        "printWidth": 80,
        "trailingComma": "none",
        "singleQuote": false
      }
    },
    {
      "files": ["*.dockerfile", "Dockerfile*"],
      "options": {
        "printWidth": 120
      }
    }
  ]
}
